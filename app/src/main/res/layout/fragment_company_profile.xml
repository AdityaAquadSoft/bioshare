<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adityavats.bioshare.fargments.CompanyProfileFragment"
    android:background="@color/customlighterGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/comapany_logo_imageView"
            android:padding="@dimen/dim_10"
            android:background="@drawable/round_image_shadow"
            android:src="@drawable/success"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_16"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="IBM"
            android:layout_gravity="center"
            android:padding="@dimen/dim_10"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_80"
            android:elevation="@dimen/dim_5"
            android:padding="@dimen/dim_10"
            android:background="@drawable/crad_view_border"
            android:layout_marginTop="@dimen/dim_20">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/company_profile_block_border">

            <View
                android:layout_width="@dimen/dim_4"
                android:layout_height="match_parent"
                android:id="@+id/greenStripView1"
                android:background="@color/customGreen"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgMyProducts"
               android:layout_toRightOf="@+id/greenStripView1"
                android:src="@drawable/success"
                android:paddingTop="@dimen/dim_10"
                android:paddingLeft="@dimen/dim_10"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgMyProducts"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_10"
                    android:textStyle="bold"
                    android:textSize="@dimen/dim_14"
                    android:text="My Products"
                    android:textColor="@color/Black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dim_10"
                        android:text="25 products"
                        android:textSize="@dimen/dim_12"/>

                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_edit_products"
                android:textSize="@dimen/dim_14"
                android:textColor="@color/customGreen"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_80"
            android:elevation="@dimen/dim_5"
            android:padding="@dimen/dim_10"
            android:background="@drawable/crad_view_border"
            android:layout_marginTop="@dimen/dim_10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/company_profile_block_border">

                <View
                    android:layout_width="@dimen/dim_4"
                    android:layout_height="match_parent"
                    android:id="@+id/greenStripView2"
                    android:background="@color/customGreen"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgOrders"
                    android:layout_toRightOf="@+id/greenStripView2"
                    android:src="@drawable/success"
                    android:paddingTop="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_10"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgOrders"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dim_10"
                        android:paddingLeft="@dimen/dim_10"
                        android:textStyle="bold"
                        android:textSize="@dimen/dim_14"
                        android:text="My Products"
                        android:textColor="@color/Black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dim_10"
                        android:text="2 New Orders"
                        android:textSize="@dimen/dim_12"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW ORDERS"
                    android:textSize="@dimen/dim_14"
                    android:textColor="@color/customGreen"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_10"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_80"
            android:elevation="@dimen/dim_5"
            android:padding="@dimen/dim_10"
            android:background="@drawable/crad_view_border"
            android:layout_marginTop="@dimen/dim_10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/company_profile_block_border">

                <View
                    android:layout_width="@dimen/dim_4"
                    android:layout_height="match_parent"
                    android:id="@+id/greenStripView3"
                    android:background="@color/customGreen"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgLeadsAlerts"
                    android:layout_toRightOf="@+id/greenStripView3"
                    android:src="@drawable/success"
                    android:paddingTop="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_10"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgLeadsAlerts"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dim_10"
                        android:paddingLeft="@dimen/dim_10"
                        android:textStyle="bold"
                        android:textSize="@dimen/dim_14"
                        android:text="@string/Leads_ALerts"
                        android:textColor="@color/Black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dim_10"
                        android:text="2 New Leads"
                        android:textSize="@dimen/dim_12"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW LEADS"
                    android:textSize="@dimen/dim_14"
                    android:textColor="@color/customGreen"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_10"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
